{
  "name": "String-Session-Bot",
  "description": "Telegram bot to generate Pyrogram/Telethon string sessions",
  "logo": "https://telegra.ph/file/b9ebde9142a8422920f40.jpg",
  "keywords": [
    "telegram",
    "bot",
    "python",
    "pyrogram",
    "kurigram",
    "telethon",
    "mongodb"
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "eco"
    }
  },
  "addons": [],
  "repository": "https://github.com/ChiranjibKoch/String-session-Bot",
  "env": {
    "ENVIRONMENT": {
      "description": "Set to any non-empty value in production.",
      "required": true,
      "value": "1"
    },
    "API_ID": {
      "description": "Get this value from https://my.telegram.org/apps",
      "required": true,
      "value": ""
    },
    "API_HASH": {
      "description": "Get this value from https://my.telegram.org/apps",
      "required": true,
      "value": ""
    },
    "BOT_TOKEN": {
      "description": "Obtain a Telegram bot token from @BotFather",
      "required": true,
      "value": ""
    },
    "MONGO_URI": {
      "description": "MongoDB connection URI (Atlas or self-hosted)",
      "required": true,
      "value": ""
    },
    "MONGO_DB": {
      "description": "MongoDB database name",
      "required": false,
      "value": "string_session_bot"
    },
    "MUST_JOIN": {
      "description": "Username or ID of a channel/group users must join (optional)",
      "required": false,
      "value": ""
    }
  }
}